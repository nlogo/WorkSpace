<Window x:Class="Convert.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="Pink">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="4"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="4"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="4"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="4"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="4"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="tb1" Grid.Row="0"></TextBox>
        <TextBox x:Name="tb2" Grid.Row="2"></TextBox>
        <TextBox x:Name="tb3" Grid.Row="4"></TextBox>
        <TextBox x:Name="tb4" Grid.Row="6"></TextBox>
        <Button x:Name="btn" Grid.Row="8" Click="btn_click" Content="加總"/>
    </Grid>
</Window>
